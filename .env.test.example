# QA Test Configuration
# Copy to .env.test and fill in values

# Base URL for testing (default: http://localhost:3000)
QA_BASE_URL=http://localhost:3000

# Database connection (can reuse DATABASE_URL)
QA_DATABASE_URL=

# Shared password for all QA test accounts
# Set before running `pnpm run qa:setup`
QA_TEST_PASSWORD=QaTest123!

# Standard test account (free tier, 500 credits)
# Generated by `pnpm run qa:setup`
QA_TEST_USER_EMAIL=qa-standard@thepit.cloud
QA_TEST_USER_PASSWORD=${QA_TEST_PASSWORD}
QA_TEST_USER_ID=
QA_TEST_USER_NAME="QA Standard"

# Premium test account (Pit Pass tier, 1000 credits)
# Generated by `pnpm run qa:setup`
QA_PREMIUM_USER_EMAIL=qa-premium@thepit.cloud
QA_PREMIUM_USER_PASSWORD=${QA_TEST_PASSWORD}
QA_PREMIUM_USER_ID=
QA_PREMIUM_USER_NAME="QA Premium"

# Exhausted test account (free tier, 0 credits)
# Generated by `pnpm run qa:setup`
QA_EXHAUSTED_USER_EMAIL=qa-exhausted@thepit.cloud
QA_EXHAUSTED_USER_PASSWORD=${QA_TEST_PASSWORD}
QA_EXHAUSTED_USER_ID=
QA_EXHAUSTED_USER_NAME="QA Exhausted"

# Timeouts (milliseconds)
QA_TIMEOUT_NAV=10000
QA_TIMEOUT_STREAM=120000
QA_TIMEOUT_API=5000
