{
  "name": "tspit",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "setup": "bash scripts/bootstrap.sh",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run tests/integration --coverage=false",
    "test:watch": "vitest",
    "test:loop": "node scripts/test-loop.mjs",
    "test:ci": "pnpm run lint && pnpm run typecheck && pnpm run test:unit && pnpm run test:integration",
    "test:e2e": "playwright test",
    "db:reset-ci": "neonctl branches reset ci-test --parent --project-id snowy-river-64480457 --org-id org-nameless-moon-32936094",
    "qa": "tsx qa/runner.ts",
    "qa:dry": "tsx qa/runner.ts --dry-run",
    "qa:api": "tsx qa/runner.ts --tier api",
    "qa:browser": "tsx qa/runner.ts --tier browser",
    "qa:nav": "tsx qa/runner.ts --category Navigation",
    "qa:auth": "tsx qa/runner.ts --category Authentication",
    "qa:arena": "tsx qa/runner.ts --category Arena",
    "qa:single": "tsx qa/runner.ts --filter",
    "qa:setup": "tsx qa/scripts/setup-accounts.ts",
    "qa:teardown": "tsx qa/scripts/teardown-accounts.ts",
    "qa:security": "tsx qa/runner.ts --filter SEC-",
    "qa:credits": "tsx qa/runner.ts --filter SEC-CRED --filter SEC-RACE",
    "qa:payments": "tsx qa/runner.ts --filter SEC-PAY",
    "qa:rate-limit": "tsx qa/runner.ts --filter SEC-RATE",
    "security:scan": "tsx qa/scripts/security-scan.ts",
    "sim": "tsx tests/simulation/run.ts",
    "sim:dry": "tsx tests/simulation/run.ts --dry-run",
    "research:export": "bash scripts/research-pipeline.sh",
    "copy:generate": "tsx scripts/copyGenerate.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.37",
    "@clerk/nextjs": "^6.37.3",
    "@clerk/themes": "^2.4.52",
    "@ethereum-attestation-service/eas-sdk": "^2.9.0",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/space-grotesk": "^5.2.10",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/nextjs-api-reference": "^0.9.18",
    "@sentry/nextjs": "^10.38.0",
    "@vercel/analytics": "^1.6.1",
    "ai": "^6.0.73",
    "canonicalize": "^2.1.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "ethers": "^6.16.0",
    "langsmith": "^0.5.4",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "posthog-js": "^1.345.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "stripe": "^14.25.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "@sentry/cli",
      "core-js",
      "esbuild",
      "keccak",
      "protobufjs",
      "secp256k1",
      "sharp",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "@clerk/backend": "^2.30.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4"
  }
}
