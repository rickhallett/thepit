# Vanity subdomains (e.g. x.thepit.cloud) are configured in 123reg.
NEXT_PUBLIC_SOCIAL_X_ENABLED=
NEXT_PUBLIC_SOCIAL_REDDIT_ENABLED=
NEXT_PUBLIC_SOCIAL_DISCORD_ENABLED=
