# Required
DATABASE_URL=
ANTHROPIC_API_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Model configuration
ANTHROPIC_FREE_MODEL=claude-haiku-4-5-20251001
