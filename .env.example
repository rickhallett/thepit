ANTHROPIC_BYOK_MODEL=claude-haiku-4-5-20251001
# Legacy fallback model ID (optional)
ANTHROPIC_MODEL=
# Model for Ask the Pit feature (defaults to free model)
ASK_THE_PIT_MODEL=

# Feature flags
PREMIUM_ENABLED=false
CREDITS_ENABLED=false
BYOK_ENABLED=false
SUBSCRIPTIONS_ENABLED=false
EAS_ENABLED=false
ASK_THE_PIT_ENABLED=false
DEMO_MODE_ENABLED=false

# Credit economy
CREDITS_STARTING_CREDITS=500
CREDIT_VALUE_GBP=0.01
CREDIT_PLATFORM_MARGIN=0.10
CREDIT_TOKEN_CHARS_PER=4
CREDIT_OUTPUT_TOKENS_PER_TURN=120
CREDIT_INPUT_FACTOR=5.5
CREDITS_ADMIN_ENABLED=false
CREDITS_ADMIN_GRANT=100
MODEL_PRICES_GBP_JSON=

# BYOK
BYOK_FEE_GBP_PER_1K_TOKENS=0.0002
BYOK_MIN_GBP=0.001

# Free bout pool
FREE_BOUT_POOL_MAX=500

# Intro pool
INTRO_POOL_TOTAL_CREDITS=15000
INTRO_POOL_DRAIN_PER_MIN=1
INTRO_SIGNUP_CREDITS=100
INTRO_REFERRAL_CREDITS=50

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PASS_PRICE_ID=
STRIPE_LAB_PRICE_ID=

# EAS (Ethereum Attestation Service)
EAS_SIGNER_PRIVATE_KEY=
EAS_RPC_URL=
EAS_SCHEMA_UID=
EAS_CHAIN_ID=8453
EAS_CONTRACT_ADDRESS=
EAS_SCHEMA_REGISTRY_ADDRESS=

# Contact form (Resend)
RESEND_API_KEY=
CONTACT_TO_EMAIL=
CONTACT_FROM_EMAIL=

# Admin
ADMIN_SEED_TOKEN=
ADMIN_USER_IDS=

# Remix rewards
# Micro-credits rewarded to remixer
REMIX_REWARD_REMIXER_MICRO=0
# Micro-credits rewarded to source agent owner
REMIX_REWARD_SOURCE_OWNER_MICRO=0

# Research
# Required in production for PII anonymization. When unset, research exports use a fixed fallback salt (not safe for production).
RESEARCH_ANONYMIZE_SALT=

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Server-side fallback for NEXT_PUBLIC_APP_URL
APP_URL=
NEXT_PUBLIC_EAS_SCAN_BASE=easscan.org

# Observability (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
SENTRY_DSN=
# Client-side Sentry DSN (must be NEXT_PUBLIC_ for browser)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
# Required for source map uploads
SENTRY_ORG=
# Required for source map uploads
SENTRY_PROJECT=
# Logger verbosity: debug, info, warn, error
LOG_LEVEL=
# Webhook URL for anomaly alerting (Slack, Discord, etc.)
ANOMALY_WEBHOOK_URL=

# LangSmith (optional)
# Set LANGSMITH_ENABLED=true to send traces to LangSmith.
# LANGSMITH_TRACING must also be 'true' (LangSmith's own env var).
LANGSMITH_ENABLED=false
LANGSMITH_API_KEY=
LANGSMITH_TRACING=false
LANGSMITH_PROJECT=thepit

# Analytics
# Required when analytics is enabled: shared secret for internal page view recording
# (middleware -> /api/pv). When unset, page view recording is skipped.
# Generate with: openssl rand -hex 32
PV_INTERNAL_SECRET=
NEXT_PUBLIC_SITE_URL=https://thepit.cloud

